<Window x:Class="TrabalhoEntityFrameWork.Cadastro"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TrabalhoEntityFrameWork"
        mc:Ignorable="d"
        Title="Cadastro de funcionários" Width="525" Height="180"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" FontSize="14" Text="Nome" Margin="10,0"/>
        <TextBox Grid.Row="1" Height="24" FontSize="14" Margin="10,0" VerticalContentAlignment="Center" Name="nomeTXT"/>

        <TextBlock Grid.Row="2" FontSize="14" Text="Cargo" Margin="10,10,5,0"/>
        <TextBox Grid.Row="3" Height="24" FontSize="14" Margin="10,0" VerticalContentAlignment="Center" Name="cargoTXT"/>

        <Button Grid.Row="4" FontSize="14" Height="30" Margin="10,10" Content="Salvar" VerticalContentAlignment="Center" Width="100" Click="Button_Click"/>
    </Grid>
</Window>
